// Определяем пин, к которому подключен светодиод
const int ledPin = 13;

// Переменная для хранения данных, полученных из последовательного монитора
char inputChar;

void setup() {
  // Настраиваем пин светодиода как выход
  pinMode(ledPin, OUTPUT);
  
  // Запускаем последовательный порт со скоростью 9600 бод
  Serial.begin(9600);
  
  // Сообщаем пользователю, что нужно ввести команды
  Serial.println("Введите 1 для включения светодиода или 0 для выключения.");
}

void loop() {
  // Проверяем, есть ли доступные данные в последовательном порту
  if (Serial.available() > 0) {
    // Читаем символ
    inputChar = Serial.read();
    
    // Проверяем, какой символ был введен
    if (inputChar == '1') {
      // Включаем светодиод
      digitalWrite(ledPin, HIGH);
      Serial.println("Светодиод включен.");
    } else if (inputChar == '0') {
      // Выключаем светодиод
      digitalWrite(ledPin, LOW);
      Serial.println("Светодиод выключен.");
    } else {
      // Если введен некорректный символ
      Serial.println("Неверная команда. Введите 1 или 0.");
    }
  }
}
